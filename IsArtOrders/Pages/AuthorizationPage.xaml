<Page x:Class="IsArtOrders.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IsArtOrders.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" TextAlignment="Center" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="E-mail" Width="75" Margin="5"/>
                <TextBox x:Name="tboxEmail" Width="150" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Пароль" Width="75" Margin="5"/>
                <PasswordBox x:Name="passBox" Width="150" Margin="5"/>
            </StackPanel>
            <Button x:Name="btnAuth" Content="Войти" 
                    Click="btnAuth_Click" Margin="5"/>
            <TextBlock Text="Не зарегистрированы?" Margin="5"
                       TextAlignment="Center"/>
            <Button x:Name="btnToReg" Content="Регистрация"
                    Margin="5" Click="btnToReg_Click"/>
        </StackPanel>
    </Grid>
</Page>
